[flake8]
max-line-length = 88
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,venv
ignore = E203, W503, E501, E402
per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501
    tests/functional/test_vector_storage_pipeline.py:C901
    tests/integration/verify_metadata_consistency.py:C901
    notebooks/*.ipynb:E226,E741,C401,F811
max-complexity = 10
docstring-convention = google
inline-quotes = double
multiline-quotes = double
select = C,E,F,W,B,B950
