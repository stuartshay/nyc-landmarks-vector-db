# NYC Landmarks Vector Database - Sample Environment Variables
# Copy this file to .env and fill in the values for your environment

# Environment settings
ENV=development
LOG_LEVEL=INFO

# Google Cloud Secret Manager settings
# Set USE_SECRET_MANAGER=true to use Google Cloud Secret Manager for credentials
USE_SECRET_MANAGER=false
GCP_PROJECT_ID=your-gcp-project-id

# OpenAI API settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_DIMENSIONS=1536  # For text-embedding-3-small
# OPENAI_API_BASE=https://api.openai.com/v1  # Optional custom API base URL

# Pinecone settings
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=nyc-landmarks
PINECONE_NAMESPACE=landmarks

# Azure Blob Storage settings
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=your-container-name

# PostgreSQL Database settings
POSTGRES_USER=your-postgres-user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=your-postgres-db
# Alternatively, you can provide a full connection string:
# POSTGRES_CONNECTION_STRING=postgresql://user:password@host:port/dbname

# Application settings
APP_HOST=0.0.0.0
APP_PORT=8000

# PDF processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Chat settings
CONVERSATION_TTL=3600
